<h1>New Figure</h1>


<form class="" action="/figures" method="post">
  <label for="figure_name">Name</label>
  <input type="text" name="figure[name]" id="figure_name">
  <br>

  <h2>Title</h2>
  <% Title.all.each do |title| %>
  <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input>
  <br>
  <% end %>
  <br>

  <label>Create new Title: </label>
  <input type="text" name="title[name]" id="new_title">
  <br><br>

  <h2>Landmark</h2>
  <% Landmark.all.each do |figure| %>
  <input type="checkbox" name="figure[landmark_ids][]" value="<%=figure.id%>"id="landmark_<%=figure.id%>"><%=figure.name%></input>
  <br>
  <% end %>
  <br>
  <label>Create new Landmark: </label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <br><br>


  <input type="submit" value="Create New Figure">

</form>
